{
  "name": "hook-complexity-monitor",
  "version": "1.0.0",
  "description": "Monitor code complexity and maintain code quality",
  "author": {
    "name": "Dev GOM",
    "url": "https://github.com/Dev-GOM/claude-code-marketplace"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "repository": "https://github.com/Dev-GOM/claude-code-marketplace",
  "license": "MIT",
  "keywords": [
    "code-quality",
    "complexity",
    "quality",
    "monitoring",
    "refactoring"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "(Edit|Write)",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/check-complexity.js",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
