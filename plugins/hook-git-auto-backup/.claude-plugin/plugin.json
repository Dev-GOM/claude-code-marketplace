{
  "name": "hook-git-auto-backup",
  "version": "1.0.0",
  "description": "Automatically backup your work with git commits after each Claude session",
  "author": {
    "name": "Dev GOM",
    "url": "https://github.com/Dev-GOM/claude-code-marketplace"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "repository": "https://github.com/Dev-GOM/claude-code-marketplace.git",
  "license": "MIT",
  "keywords": [
    "productivity",
    "git",
    "backup",
    "automation"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/backup.js",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
