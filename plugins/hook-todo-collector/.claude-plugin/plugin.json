{
  "name": "hook-todo-collector",
  "version": "1.0.0",
  "description": "Collect all TODO and FIXME comments from your project",
  "author": {
    "name": "Dev GOM",
    "url": "https://github.com/Dev-GOM/claude-code-marketplace"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "repository": "https://github.com/Dev-GOM/claude-code-marketplace.git",
  "license": "MIT",
  "keywords": [
    "productivity",
    "todo",
    "fixme",
    "comments",
    "tracking"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/collect-todos.js",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
