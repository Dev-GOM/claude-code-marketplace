{
  "name": "hook-todo-collector",
  "version": "1.0.0",
  "description": "Collect all TODO and FIXME comments from your project",
  "author": {
    "name": "Dev GOM"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "keywords": [
    "productivity",
    "todo",
    "fixme",
    "comments",
    "tracking"
  ],
  "hooks": {
    "stop": {
      "command": "node ${CLAUDE_PLUGIN_ROOT}/collect-todos.js",
      "timeout": 15000
    }
  }
}
