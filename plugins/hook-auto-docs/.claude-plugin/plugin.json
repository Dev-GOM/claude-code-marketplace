{
  "name": "hook-auto-docs",
  "version": "1.0.0",
  "description": "Automatically update project documentation based on code changes",
  "author": {
    "name": "Dev GOM"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "keywords": [
    "documentation",
    "automation",
    "changelog",
    "readme"
  ],
  "hooks": {
    "stop": {
      "command": "node ${CLAUDE_PLUGIN_ROOT}/update-docs.js",
      "timeout": 15000
    }
  }
}
