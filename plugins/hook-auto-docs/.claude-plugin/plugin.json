{
  "name": "hook-auto-docs",
  "version": "1.0.0",
  "description": "Automatically update project documentation based on code changes",
  "author": {
    "name": "Dev GOM",
    "url": "https://github.com/Dev-GOM/claude-code-marketplace"
  },
  "category": "hooks",
  "homepage": "https://github.com/Dev-GOM/claude-code-marketplace",
  "repository": "https://github.com/Dev-GOM/claude-code-marketplace.git",
  "license": "MIT",
  "keywords": [
    "documentation",
    "automation",
    "changelog",
    "readme"
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/update-docs.js",
            "timeout": 15000
          }
        ]
      }
    ]
  }
}
