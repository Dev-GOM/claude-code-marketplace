/* ===== ROOT CONTAINER ===== */
.container {
    flex-grow: 1;
    padding: 0;
    margin: 0;
}

/* ===== HEADER SECTION ===== */
.header-section {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 12px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(0, 0, 0, 0.3);
    margin-bottom: 8px;
}

.header-title {
    font-size: 16px;
    -unity-font-style: bold;
    color: rgb(200, 200, 200);
    margin-bottom: 4px;
}

.header-subtitle {
    font-size: 11px;
    color: rgb(150, 150, 150);
    -unity-font-style: italic;
}

/* ===== CONTENT SECTION ===== */
.content-section {
    flex-grow: 1;
    padding: 8px;
}

/* ===== SETTINGS GROUP ===== */
.settings-group {
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(0, 0, 0, 0.2);
    padding: 12px;
    margin-bottom: 8px;
}

.group-label {
    font-size: 13px;
    -unity-font-style: bold;
    color: rgb(180, 180, 180);
    margin-bottom: 8px;
    padding-bottom: 4px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(255, 255, 255, 0.1);
}

/* ===== INPUT FIELDS ===== */
.input-field {
    margin-bottom: 6px;
    padding: 2px;
}

.input-field > Label {
    min-width: 120px;
    color: rgb(190, 190, 190);
}

/* ===== HELP BOX ===== */
.help-box {
    margin-top: 12px;
    margin-bottom: 8px;
    padding: 8px;
    border-radius: 4px;
}

/* ===== FOOTER SECTION ===== */
.footer-section {
    border-top-width: 1px;
    border-top-color: rgba(0, 0, 0, 0.3);
    padding: 8px;
    background-color: rgba(0, 0, 0, 0.15);
}

/* ===== BUTTON CONTAINER ===== */
.button-container {
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 8px;
}

/* ===== BUTTONS ===== */
.primary-button {
    flex-grow: 1;
    height: 32px;
    margin-right: 4px;
    background-color: rgb(60, 120, 200);
    color: white;
    border-radius: 4px;
    border-width: 0;
    -unity-font-style: bold;
    transition-duration: 0.15s;
}

.primary-button:hover {
    background-color: rgb(70, 140, 220);
    scale: 1.02 1.02;
}

.primary-button:active {
    background-color: rgb(50, 110, 180);
    scale: 0.98 0.98;
}

.primary-button:disabled {
    background-color: rgb(80, 80, 80);
    color: rgb(120, 120, 120);
}

.secondary-button {
    height: 32px;
    min-width: 80px;
    background-color: rgba(100, 100, 100, 0.5);
    color: rgb(200, 200, 200);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(0, 0, 0, 0.3);
    transition-duration: 0.15s;
}

.secondary-button:hover {
    background-color: rgba(120, 120, 120, 0.6);
    border-color: rgba(255, 255, 255, 0.2);
}

.secondary-button:active {
    background-color: rgba(80, 80, 80, 0.6);
}

/* ===== STATUS BAR ===== */
.status-bar {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 6px 8px;
    border-radius: 4px;
}

.status-label {
    font-size: 11px;
    color: rgb(180, 180, 180);
    -unity-font-style: italic;
}

/* ===== SCROLLVIEW ===== */
ScrollView {
    flex-grow: 1;
}

/* ===== UNITY DARK THEME ADJUSTMENTS ===== */
/* These styles work better in Unity's dark theme */
:root {
    color: rgb(200, 200, 200);
}

TextField {
    background-color: rgba(0, 0, 0, 0.3);
}

Toggle {
    margin-top: 4px;
    margin-bottom: 4px;
}

/* ===== HOVER EFFECTS ===== */
.input-field:hover {
    background-color: rgba(255, 255, 255, 0.02);
    border-radius: 4px;
}

/* ===== RESPONSIVE LAYOUT ===== */
@media (max-width: 500px) {
    .button-container {
        flex-direction: column;
    }

    .primary-button {
        margin-right: 0;
        margin-bottom: 4px;
    }
}
