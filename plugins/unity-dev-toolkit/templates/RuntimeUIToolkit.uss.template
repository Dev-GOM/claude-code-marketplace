/* ===== MAIN CONTAINER ===== */
.main-container {
    flex-grow: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(20, 20, 30, 0.95);
    border-width: 2px;
    border-color: rgba(100, 150, 255, 0.5);
    border-radius: 8px;
}

/* ===== HEADER PANEL ===== */
.header-panel {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(30, 40, 60, 0.9);
    border-bottom-width: 2px;
    border-bottom-color: rgba(100, 150, 255, 0.6);
    padding: 12px 16px;
    min-height: 50px;
}

.title-label {
    font-size: 24px;
    -unity-font-style: bold;
    color: rgb(220, 230, 255);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

.close-button {
    width: 36px;
    height: 36px;
    font-size: 28px;
    background-color: rgba(200, 50, 50, 0.8);
    color: white;
    border-radius: 4px;
    border-width: 0;
    -unity-font-style: bold;
    transition-duration: 0.2s;
}

.close-button:hover {
    background-color: rgba(255, 60, 60, 1);
    scale: 1.1 1.1;
}

.close-button:active {
    background-color: rgba(180, 40, 40, 1);
    scale: 0.95 0.95;
}

/* ===== CONTENT PANEL ===== */
.content-panel {
    flex-grow: 1;
    padding: 16px;
}

/* ===== SECTIONS ===== */
.info-section,
.input-section,
.stats-section,
.actions-section,
.notification-section {
    background-color: rgba(40, 50, 70, 0.6);
    border-radius: 6px;
    border-width: 1px;
    border-color: rgba(100, 150, 255, 0.3);
    padding: 12px;
    margin-bottom: 12px;
}

.section-label {
    font-size: 16px;
    -unity-font-style: bold;
    color: rgb(150, 200, 255);
    margin-bottom: 8px;
    padding-bottom: 4px;
    border-bottom-width: 1px;
    border-bottom-color: rgba(100, 150, 255, 0.4);
}

.description-label {
    font-size: 13px;
    color: rgb(180, 190, 210);
    -unity-font-style: italic;
    white-space: normal;
}

/* ===== INPUT FIELDS ===== */
.input-field,
.toggle-field,
.slider-field {
    margin-top: 6px;
    margin-bottom: 6px;
}

.input-field > Label,
.toggle-field > Label,
.slider-field > Label {
    min-width: 80px;
    font-size: 14px;
    color: rgb(200, 210, 230);
}

TextField {
    background-color: rgba(20, 30, 50, 0.8);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(100, 150, 255, 0.3);
    padding: 6px;
    font-size: 14px;
    color: rgb(220, 230, 255);
}

TextField:focus {
    border-color: rgba(100, 150, 255, 0.8);
    background-color: rgba(30, 40, 60, 0.9);
}

/* ===== STATS SECTION ===== */
.stat-item {
    flex-direction: row;
    align-items: center;
    margin-bottom: 8px;
    padding: 6px;
    background-color: rgba(30, 40, 60, 0.4);
    border-radius: 4px;
}

.stat-label {
    min-width: 80px;
    font-size: 14px;
    color: rgb(200, 210, 230);
    -unity-font-style: bold;
}

.stat-value,
.score-value {
    font-size: 14px;
    color: rgb(150, 200, 255);
    -unity-font-style: bold;
    margin-left: 8px;
}

.score-value {
    font-size: 20px;
    color: rgb(255, 220, 100);
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
}

/* ===== PROGRESS BARS ===== */
ProgressBar {
    flex-grow: 1;
    height: 20px;
    background-color: rgba(20, 30, 50, 0.8);
    border-radius: 10px;
    border-width: 1px;
    border-color: rgba(100, 150, 255, 0.4);
    margin-left: 8px;
    margin-right: 8px;
}

.health-bar > VisualElement {
    background-color: rgb(100, 200, 100);
    border-radius: 10px;
}

.health-bar {
    background-color: rgba(150, 50, 50, 0.6);
}

.progress-bar > VisualElement {
    background-color: rgb(100, 150, 255);
    border-radius: 10px;
}

/* ===== BUTTONS ===== */
.button-row {
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 8px;
}

.action-button {
    flex-grow: 1;
    height: 40px;
    margin: 4px;
    font-size: 15px;
    -unity-font-style: bold;
    border-radius: 6px;
    border-width: 2px;
    transition-duration: 0.2s;
    color: white;
}

.primary-button {
    background-color: rgb(60, 120, 220);
    border-color: rgb(80, 140, 255);
}

.primary-button:hover {
    background-color: rgb(80, 140, 255);
    border-color: rgb(120, 180, 255);
    scale: 1.05 1.05;
}

.primary-button:active {
    background-color: rgb(50, 100, 200);
    scale: 0.98 0.98;
}

.primary-button:disabled {
    background-color: rgb(60, 60, 80);
    border-color: rgb(80, 80, 100);
    color: rgb(120, 120, 140);
}

.secondary-button {
    background-color: rgba(100, 100, 120, 0.8);
    border-color: rgba(140, 140, 160, 0.8);
}

.secondary-button:hover {
    background-color: rgba(130, 130, 150, 1);
    border-color: rgba(170, 170, 190, 1);
    scale: 1.05 1.05;
}

.secondary-button:active {
    background-color: rgba(80, 80, 100, 1);
    scale: 0.98 0.98;
}

.tertiary-button {
    background-color: rgba(80, 100, 140, 0.7);
    border-color: rgba(100, 120, 180, 0.7);
}

.tertiary-button:hover {
    background-color: rgba(100, 120, 180, 0.9);
    border-color: rgba(120, 150, 220, 0.9);
    scale: 1.03 1.03;
}

.tertiary-button:active {
    background-color: rgba(60, 80, 120, 0.9);
    scale: 0.98 0.98;
}

/* ===== HELP BOX ===== */
.help-box {
    margin-top: 8px;
    padding: 10px;
    background-color: rgba(50, 100, 150, 0.3);
    border-radius: 6px;
    border-width: 1px;
    border-color: rgba(100, 150, 255, 0.4);
}

/* ===== FOOTER PANEL ===== */
.footer-panel {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(30, 40, 60, 0.9);
    border-top-width: 2px;
    border-top-color: rgba(100, 150, 255, 0.6);
    padding: 8px 16px;
    min-height: 40px;
}

.status-label,
.timestamp-label {
    font-size: 13px;
    color: rgb(180, 190, 210);
    -unity-font-style: italic;
}

.timestamp-label {
    color: rgb(150, 200, 255);
    -unity-font-style: bold;
}

/* ===== SCROLLVIEW ===== */
ScrollView {
    flex-grow: 1;
}

#unity-content-container {
    flex-grow: 1;
}

/* ===== TOGGLE ===== */
Toggle {
    margin-top: 4px;
    margin-bottom: 4px;
}

Toggle > Label {
    color: rgb(200, 210, 230);
}

/* ===== SLIDER ===== */
Slider {
    margin-top: 4px;
    margin-bottom: 4px;
}

.unity-base-slider__dragger {
    background-color: rgb(100, 150, 255);
    border-radius: 50%;
    width: 16px;
    height: 16px;
}

.unity-base-slider__tracker {
    background-color: rgba(50, 70, 100, 0.8);
    height: 6px;
    border-radius: 3px;
}

/* ===== HOVER EFFECTS ===== */
.input-field:hover,
.toggle-field:hover,
.slider-field:hover {
    background-color: rgba(60, 80, 120, 0.2);
    border-radius: 4px;
}

/* ===== ANIMATIONS ===== */
.main-container {
    transition-property: opacity, scale;
    transition-duration: 0.3s;
}

/* ===== RESPONSIVE LAYOUT ===== */
@media (max-width: 600px) {
    .button-row {
        flex-direction: column;
    }

    .action-button {
        margin-left: 0;
        margin-right: 0;
    }

    .title-label {
        font-size: 20px;
    }

    .stat-item {
        flex-direction: column;
        align-items: flex-start;
    }

    .stat-label {
        margin-bottom: 4px;
    }
}

/* ===== THEME COLORS ===== */
:root {
    /* Primary color scheme */
    --primary-color: rgb(60, 120, 220);
    --primary-hover: rgb(80, 140, 255);
    --primary-active: rgb(50, 100, 200);

    /* Background colors */
    --bg-dark: rgba(20, 20, 30, 0.95);
    --bg-medium: rgba(40, 50, 70, 0.6);
    --bg-light: rgba(60, 80, 120, 0.4);

    /* Text colors */
    --text-primary: rgb(220, 230, 255);
    --text-secondary: rgb(200, 210, 230);
    --text-accent: rgb(150, 200, 255);

    /* Border colors */
    --border-color: rgba(100, 150, 255, 0.5);
    --border-color-hover: rgba(100, 150, 255, 0.8);
}
